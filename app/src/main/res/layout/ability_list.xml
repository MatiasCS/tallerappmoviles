<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_list_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ability_type"
            style="@style/HeaderTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:text="Regular" />

        <TextView
            android:id="@+id/tv_ability_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"

            tools:text="Volt Absorb: The Pokémon heals up to 1/4 of it’s maximum Hit Points when hit with Electric-type moves. " />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
</LinearLayout>